<%- include("partials/header") -%>
<div class="columns is-centered mt-5">
  <div class="card column is-half">
    <div class="card-content">
      <div class="content">
        <div class="field">
          <div class="has-text-info has-text-weight-bold is-size-4 mb-4">
            Contact
          </div>

          <!-- Contact form -->
